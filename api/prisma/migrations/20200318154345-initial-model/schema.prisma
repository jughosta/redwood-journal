datasource DS {
  provider = "sqlite"
  url = "***"
}

generator photonjs {
  provider = "prisma-client-js"
  binaryTargets = ["native", env("BINARY_TARGET")]
}

enum DayTime {
  MORNING
  EVENING
}

model Entry {
  id          String @id @default(cuid())
  question    String
  answer      String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Chapter {
  id          String @id @default(cuid())
  dayTime     DayTime
  entries     Entry[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
